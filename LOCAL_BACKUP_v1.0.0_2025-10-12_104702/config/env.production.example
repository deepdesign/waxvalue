# WaxValue Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://waxvalue_user:your_secure_db_password@localhost:5432/waxvalue_prod
DB_HOST=localhost
DB_PORT=5432
DB_NAME=waxvalue_prod
DB_USER=waxvalue_user
DB_PASSWORD=your_secure_db_password_here

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# DISCOGS API CONFIGURATION
# =============================================================================
DISCOGS_CONSUMER_KEY=your_discogs_consumer_key
DISCOGS_CONSUMER_SECRET=your_discogs_consumer_secret
DISCOGS_API_URL=https://api.discogs.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_APP_URL=https://yourdomain.com
PORT=3000
BACKEND_PORT=8000

# =============================================================================
# REDIS CONFIGURATION (for sessions and caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=WaxValue

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURE_COOKIES=true
CORS_ORIGIN=https://yourdomain.com
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX_REQUESTS=5
RATE_LIMIT_LOGIN_WINDOW_MS=900000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/waxvalue/backend.log
SECURITY_LOG_FILE=/var/log/waxvalue/security.log

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Add any other external service configurations here
# STRIPE_SECRET_KEY=sk_live_...
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...

# =============================================================================
# DEVELOPMENT OVERRIDES (should be empty in production)
# =============================================================================
# DEBUG=false
# MOCK_DISCOGS_API=false
# SKIP_AUTH=false
